html
    head
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Oxygen:300,400")
        link(rel="stylesheet", href="main.css")
        title Dialogue Tree
    body
        header
            .title#file-title Untitled
            nav
                .btn#add-dialog Add
                .btn#open-file
                    label(for="file-input") Open
                        input(type="file", id="file-input", accept=".json")
                .btn#export-file Export
        .input-dialog.clear#create-dialogue
            .header Create a Dialogue
            .input
                textarea#dialogText(placeholder="Text")
            .input
                input#dialogActor(type="text", placeholder="Actor")
            .input
                .btn#add-dialogue Add
                .btn#cancel-dialogue Cancel
        .input-dialog#export-dialogues
            .header Export
            .input
                .btn Download
                    a#export-link
                        .btn-fill
                .btn#cancel-export Cancel
        .project#project
            svg(id="main-svg")
                defs
                    marker#arrowhead(markerwidth="12", markerheight="12", refx="12", refy="6", orient="auto")
                        path(d="M0,0 L0,12 L12,6 L0,0", style="fill: #000000;")
                    marker#endarrow(markerwidth="12", markerheight="12", refx="0", refy="6", orient="auto")
                        path(d="M12,12 L12,0 L0,6 L12,12", style="fill: #000000;")
        script(src="js/main.js")
            